<h1>Listing issues</h1>

<table>
  <thead>
    <tr>
      <th>Client</th>
      <th>Name</th>
      <th>Date</th>
      <th>Content</th>
      <th>Image</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= issue.client %></td>
        <td><%= issue.name %></td>
        <td><%= issue.date %></td>
        <td><%= truncate(issue.content, length: 10) %></td>
        <td><%= issue.image %></td>
        <td><%= link_to 'Show', issue %></td>
        <td><%= link_to 'Edit', edit_issue_path(issue) %></td>
        <td><%= link_to 'Destroy', issue, method: :delete, data: { confirm: 'Sure you want to do that?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Issue', new_issue_path %>
